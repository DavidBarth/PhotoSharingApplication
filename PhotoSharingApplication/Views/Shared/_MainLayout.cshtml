@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link type="text/css" rel="stylesheet" href="http://code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css" />
    <link type="text/css" rel="stylesheet" href="~/content/photosharingstyles.css" />
    
    <script src="http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.8.0.min.js" 
    type="text/javascript"></script> 
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.unobtrusive-ajax.js" 
    type="text/javascript"></script> 
    <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.12.1/jquery-ui.min.js"></script>
</head>
<body>
    <div>
        <h1 class ="site-page-title">Adventure Photo Sharing</h1>
        <div class="clear-floats" />
        <div id="topmenu">
            @Html.MvcSiteMap().Menu(false,true,false)
        </div>

        <div id="breadcrumb">
            @Html.MvcSiteMap().SiteMapPath()
        </div>
        @if (Session["Favorites"] != null)
        {
            <div id="favorites-link">
                @Html.ActionLink("Favorite Photos", "FavoritesSlideShow", "Photo")
            </div>
        }
        <div>
           @RenderBody()
        </div>
    </div>
</body>
</html>
